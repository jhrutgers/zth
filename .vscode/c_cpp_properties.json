{
	"env": {
		"includePath": [
			"${workspaceFolder}/include",
			"${workspaceFolder}/dist/*/build/*-extern-prefix/src/**",
			"${workspaceFolder}/dist/*/build/_deps/*-src/*/include",
			"${workspaceFolder}/examples/**",
			"${workspaceFolder}/tests/**"
		],
		"defines": []
	},
	"configurations": [
		{
			"name": "Linux",
			"includePath": [
				"${env:includePath}"
			],
			"defines": [
				"${env:defines}",
				"ZTH_HAVE_LIBZMQ",
				"ZTH_ENABLE_ASAN"
			],
			"compilerPath": "/usr/bin/g++",
			"cStandard": "c17",
			"cppStandard": "c++20",
			"intelliSenseMode": "linux-gcc-x64"
		},
		{
			"name": "MinGW",
			"includePath": [
				"${env:includePath}"
			],
			"defines": [
				"${env:defines}",
				"ZTH_HAVE_LIBZMQ"
			],
			"compilerPath": "/usr/bin/x86_64-w64-mingw32-g++",
			"cStandard": "c17",
			"cppStandard": "c++20",
			"intelliSenseMode": "linux-gcc-x64"
		},
		{
			"name": "ARM",
			"includePath": [
				"${env:includePath}"
			],
			"defines": [
				"${env:defines}",
				"ZTH_OS_BAREMETAL=1"
			],
			"compilerPath": "/usr/bin/arm-none-eabi-g++",
			"cStandard": "c17",
			"cppStandard": "c++20",
			"intelliSenseMode": "gcc-arm"
		},
		{
			"name": "Win32",
			"includePath": [
				"${env:includePath}",
				"C:/ProgramData/mingw64/mingw64/x86_64-w64-mingw32/include"
			],
			"defines": [
				"${env:defines}"
			],
			"cStandard": "c17",
			"cppStandard": "c++20"
		},
		{
			"name": "Mac",
			"includePath": [
				"${env:includePath}"
			],
			"defines": [
				"${env:defines}"
			],
			"compilerPath": "/usr/bin/clang",
			"cStandard": "c17",
			"cppStandard": "c++20",
			"intelliSenseMode": "macos-clang-x64"
		}
	],
	"version": 4
}