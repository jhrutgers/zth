{
	"editor.formatOnSave": true,
	"cmake.configureOnOpen": false,
	"files.associations": {
		"stored": "cpp",
		".clang-tidy": "yaml",
		"*.h": "cpp",
		"**/include/**": "cpp"
	},
	"cSpell.words": [
		"zth"
	],
	"cSpell.diagnosticLevel": "Hint",
	"[cpp]": {
		"editor.defaultFormatter": "xaver.clang-format"
	},
	"[c]": {
		"editor.defaultFormatter": "xaver.clang-format"
	},
	"C_Cpp.doxygen.generatedStyle": "/*!",
	"files.exclude": {
		"**/.git": true,
		"**/dist/venv/**": true
	},
	"clang-format.executable": "clang-format-15",
	"vim.textwidth": 100,
	"vim.tabstop": 8
}
