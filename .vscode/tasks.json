{
	"version": "2.0.0",
	"tasks": [
		{
			"label": "bootstrap",
			"detail": "Install system dependencies",
			"type": "shell",
			"osx": {
				"command": "${workspaceFolder}/dist/macos/bootstrap.sh"
			},
			"linux": {
				"command": "${workspaceFolder}/dist/ubuntu/bootstrap.sh"
			},
			"windows": {
				"command": "${workspaceFolder}\\dist\\win32\\bootstrap.cmd"
			},
			"problemMatcher": [],
			"presentation": {
				"focus": true,
				"panel": "shared"
			}
		},
		{
			"label": "bootstrap-mingw",
			"detail": "Install system dependencies for building with MinGW",
			"type": "shell",
			"command": "${workspaceFolder}/dist/mingw/bootstrap.sh",
			"windows": {
				"command": "echo Not supported on Windows & exit /b 1"
			},
			"problemMatcher": [],
			"presentation": {
				"focus": true,
				"panel": "shared"
			}
		},
		{
			"label": "bootstrap-qemu-arm-a15",
			"detail": "Install system dependencies for building with QEMU ARM A15",
			"type": "shell",
			"command": "${workspaceFolder}/dist/qemu-arm-a15/bootstrap.sh",
			"osx": {
				"command": "echo Not supported on macOS && exit 1"
			},
			"windows": {
				"command": "echo Not supported on Windows & exit /b 1"
			},
			"problemMatcher": [],
			"presentation": {
				"focus": true,
				"panel": "shared"
			}
		},
		{
			"label": "config",
			"detail": "(Re)configure the project with given CMAKE_BUILD_TYPE",
			"type": "shell",
			"osx": {
				"command": "${workspaceFolder}/dist/macos/build.sh ${input:buildtype} conf test dev nosan clean"
			},
			"linux": {
				"command": "${workspaceFolder}/dist/ubuntu/build.sh ${input:buildtype} conf test dev nosan clean"
			},
			"windows": {
				"command": "${workspaceFolder}\\dist\\win32\\build.cmd ${input:buildtype}"
			},
			"problemMatcher": []
		},
		{
			"label": "config-debug",
			"detail": "(Re)configure the project as Debug",
			"type": "shell",
			"osx": {
				"command": "${workspaceFolder}/dist/macos/build.sh Debug conf test dev san clean"
			},
			"linux": {
				"command": "${workspaceFolder}/dist/ubuntu/build.sh Debug conf test dev san clean"
			},
			"windows": {
				"command": "${workspaceFolder}\\dist\\win32\\build.cmd Debug"
			},
			"problemMatcher": [],
			"presentation": {
				"clear": true
			}
		},
		{
			"label": "config-release",
			"detail": "(Re)configure the project as Release",
			"type": "shell",
			"osx": {
				"command": "${workspaceFolder}/dist/macos/build.sh Release conf test dev clean"
			},
			"linux": {
				"command": "${workspaceFolder}/dist/ubuntu/build.sh Release conf test dev clean"
			},
			"windows": {
				"command": "${workspaceFolder}\\dist\\win32\\build.cmd Release"
			},
			"problemMatcher": [],
			"presentation": {
				"clear": true
			}
		},
		{
			"label": "config-mingw",
			"detail": "(Re)configure the MinGW project with given CMAKE_BUILD_TYPE",
			"type": "shell",
			"command": "${workspaceFolder}/dist/mingw/build.sh ${input:buildtype} conf test dev nosan clean",
			"windows": {
				"command": "echo Not supported on Windows & exit /b 1"
			},
			"problemMatcher": []
		},
		{
			"label": "config-qemu-arm-a15",
			"detail": "(Re)configure the QEMU ARM A15 project with given CMAKE_BUILD_TYPE",
			"type": "shell",
			"command": "${workspaceFolder}/dist/qemu-arm-a15/build.sh ${input:buildtype} conf dev nosan clean",
			"osx": {
				"command": "echo Not supported on macOS && exit 1"
			},
			"windows": {
				"command": "echo Not supported on Windows & exit /b 1"
			},
			"problemMatcher": []
		},
		{
			"label": "build",
			"detail": "Build a target. The project must be configured first.",
			"type": "shell",
			"command": "cmake --build . --target ${input:target}",
			"osx": {
				"options": {
					"cwd": "${workspaceFolder}/dist/macos/build"
				},
				"problemMatcher": [
					"$gcc"
				]
			},
			"linux": {
				"options": {
					"cwd": "${workspaceFolder}/dist/ubuntu/build"
				},
				"problemMatcher": [
					"$gcc"
				]
			},
			"windows": {
				"options": {
					"cwd": "${workspaceFolder}\\dist\\win32\\build"
				},
				"problemMatcher": [
					"$msCompile"
				]
			},
			"group": {
				"kind": "build",
				"isDefault": true
			},
			"presentation": {
				"clear": true
			}
		},
		{
			"label": "build-all",
			"detail": "Build all. The project must be configured first.",
			"type": "shell",
			"command": "cmake --build .",
			"osx": {
				"options": {
					"cwd": "${workspaceFolder}/dist/macos/build"
				},
				"problemMatcher": [
					"$gcc"
				]
			},
			"linux": {
				"options": {
					"cwd": "${workspaceFolder}/dist/ubuntu/build"
				},
				"problemMatcher": [
					"$gcc"
				]
			},
			"windows": {
				"options": {
					"cwd": "${workspaceFolder}\\dist\\win32\\build"
				},
				"problemMatcher": [
					"$msCompile"
				]
			},
			"group": {
				"kind": "build"
			},
			"presentation": {
				"clear": true
			}
		},
		{
			"label": "install",
			"detail": "Install all built targets.",
			"type": "shell",
			"dependsOn": "build-all",
			"command": "cmake --build . --target install",
			"osx": {
				"options": {
					"cwd": "${workspaceFolder}/dist/macos/build"
				},
				"problemMatcher": [
					"$gcc"
				]
			},
			"linux": {
				"options": {
					"cwd": "${workspaceFolder}/dist/ubuntu/build"
				},
				"problemMatcher": [
					"$gcc"
				]
			},
			"windows": {
				"options": {
					"cwd": "${workspaceFolder}\\dist\\win32\\build"
				},
				"problemMatcher": [
					"$msCompile"
				]
			},
			"group": {
				"kind": "build"
			},
			"presentation": {
				"clear": true
			}
		},
		{
			"label": "build-mingw",
			"detail": "Build a target for MinGW. The project must be configured first.",
			"type": "shell",
			"command": "cmake --build . --target ${input:target}",
			"options": {
				"cwd": "${workspaceFolder}/dist/mingw/build"
			},
			"problemMatcher": [
				"$gcc"
			],
			"windows": {
				"command": "echo Not supported on Windows & exit /b 1"
			},
			"group": {
				"kind": "build",
				"isDefault": true
			},
			"presentation": {
				"clear": true
			}
		},
		{
			"label": "build-qemu-arm-a15",
			"detail": "Build a target for QEMU ARM A15. The project must be configured first.",
			"type": "shell",
			"command": "cmake --build . --target ${input:target}",
			"options": {
				"cwd": "${workspaceFolder}/dist/qemu-arm-a15/build"
			},
			"problemMatcher": [
				"$gcc"
			],
			"osx": {
				"command": "echo Not supported on macOS && exit 1"
			},
			"windows": {
				"command": "echo Not supported on Windows & exit /b 1"
			},
			"group": {
				"kind": "build",
				"isDefault": true
			},
			"presentation": {
				"clear": true
			}
		},
		{
			"label": "test",
			"detail": "Run all tests.",
			"type": "shell",
			"dependsOn": "install",
			"command": [
				"cmake --build . --target test"
			],
			"osx": {
				"options": {
					"cwd": "${workspaceFolder}/dist/macos/build"
				}
			},
			"linux": {
				"options": {
					"cwd": "${workspaceFolder}/dist/ubuntu/build"
				}
			},
			"windows": {
				"options": {
					"cwd": "${workspaceFolder}\\dist\\win32\\build"
				}
			},
			"group": {
				"kind": "test"
			},
			"presentation": {
				"clear": true
			}
		},
		{
			"label": "run-qemu-arm-a15",
			"detail": "Run an example on QEMU ARM A15.",
			"type": "shell",
			"command": "${workspaceFolder}/dist/qemu-arm-a15/run.sh ${workspaceFolder}/dist/qemu-arm-a15/build/examples/${input:example} -S",
			"isBackground": true,
			"options": {
				"cwd": "${workspaceFolder}/dist/qemu-arm-a15/build"
			},
			"osx": {
				"command": "echo Not supported on macOS && exit 1"
			},
			"windows": {
				"command": "echo Not supported on Windows & exit /b 1"
			},
			"group": {
				"kind": "none",
				"isDefault": true
			},
			"presentation": {
				"clear": true
			},
			"problemMatcher": {
				"owner": "custom",
				"fileLocation": "relative",
				"pattern": {
					"regexp": ".",
				},
				"background": {
					"activeOnStart": true,
					"beginsPattern": ".",
					"endsPattern": "^Waiting for GDB connection.*"
				}
			}
		}
	],
	"inputs": [
		{
			"id": "buildtype",
			"type": "pickString",
			"description": "CMAKE_BUILD_TYPE",
			"options": [
				"Debug",
				"RelWithDebInfo",
				"Release"
			],
			"default": "Debug"
		},
		{
			"id": "target",
			"type": "command",
			"command": "memento.promptString",
			"args": {
				"id": "target",
				"description": "build target",
				"default": "all"
			}
		},
		{
			"id": "example",
			"type": "command",
			"command": "memento.promptString",
			"args": {
				"id": "example",
				"description": "example to run",
				"default": "1_helloworld"
			}
		}
	]
}